{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@services/*": ["./src/services/*"],
      "@state/*": ["./src/state/*"],
      "@utils/*": ["./src/utils/*"],
      "@data/*": ["./src/data/*"],
      "@app-types/*": ["./types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "types/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
