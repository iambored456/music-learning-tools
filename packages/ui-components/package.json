{
  "name": "@mlt/ui-components",
  "version": "0.1.0",
  "private": true,
  "description": "Shared Svelte 5 UI components for Music Learning Tools",
  "type": "module",
  "svelte": "./src/index.ts",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "svelte": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./canvas": {
      "types": "./src/canvas/index.ts",
      "svelte": "./src/canvas/index.ts",
      "import": "./src/canvas/index.ts"
    },
    "./pitch-wheels": {
      "types": "./src/pitch-wheels/index.ts",
      "svelte": "./src/pitch-wheels/index.ts",
      "import": "./src/pitch-wheels/index.ts"
    }
  },
  "files": ["src"],
  "scripts": {
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "dependencies": {
    "@mlt/pitch-viewport": "workspace:*",
    "@mlt/types": "workspace:*",
    "@mlt/pitch-data": "workspace:*",
    "@mlt/student-notation-engine": "workspace:*"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "tone": "^15.0.4",
    "tonal": "^6.4.2"
  },
  "devDependencies": {
    "svelte": "^5.46.1",
    "svelte-check": "^4.0.0",
    "typescript": "^5.7.2"
  }
}
